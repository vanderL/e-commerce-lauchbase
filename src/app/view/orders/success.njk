{% extends "layout.njk" %}

{% import "parts/card.njk" as card %}

{% block content %}

{% call card.render('', 'order-success container ') %}

    <div class="success-lottie"></div>
    <h2>Pedido realizado com sucesso!</h2>
    <p> Aguarde a resposta do vendedor no seu email cadastrado! </p>
    <a href="/products/search">Comprar mais</a>
    
{% endcall %}

<script src="/script/lottie.min.js"></script>

<script>
    const element = document.querySelector('.success-lottie')

    lottie.loadAnimation({
        container: element, // the dom element that will contain the animation
        renderer: 'svg',
        loop: false,
        autoplay: true,
        path: '/animation/433-checked-done.json'
    });
</script>


{% endblock content %}