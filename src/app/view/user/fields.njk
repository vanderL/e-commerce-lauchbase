<div class="item">
    <div>Nome completo</div>
    <div class="input">
        <input 
            type="text"
            name="name"
            placeholder="Digite seu nome completo"
            value="{{user.name}}"
            required
        >
    </div>
</div> 

<div class="item">
    <div>email</div>
    <div class="input">
        <input 
            type="email"
            name="email"
            placeholder="Digite seu melhor email"
            value="{{user.email}}"
            onblur="Validate.apply(this, 'isEmail')"
        >
    </div>
</div> 

<div class="item">
    <div>Senha</div>
    <div class="input">
        <input 
            type="password"
            name="password"
            {% if not user.id %}
            placeholder="Digite uma senha unica"
            {% else %}
            placeholder="boa sorte!! {{user.password}}"
            {% endif %}
        >
    </div>
</div>

{% if not user.id %}
<div class="item">
    <div>Repita a senha</div>
    <div class="input">
        <input 
            type="password"
            name="passwordRepeat"
            placeholder="Repita a senha"
        >
    </div>
</div> 
{% endif %}
 
<div class="item">
    <div>CPF ou CNPJ</div>
    <div class="input">
        <input 
            type="text"
            name="cpf_cnpj"
            placeholder="CPF OU CNPJ"
            value="{{user.cpf_cnpj}}"
            onkeydown="Mask.apply(this, 'cpfCnpj')"
            onblur="Validate.apply(this, 'isCpfCnpj')"

        >
    </div>
</div>

<div class="item">
    <div>CEP</div>
    <div class="input">
        <input 
            type="text"
            name="cep"
            placeholder="Digite seu CEP"
            value="{{user.cep}}"
            onkeydown="Mask.apply(this, 'cep')"
            onblur="Validate.apply(this, 'isCep')"
        >
    </div>
</div> 

<div class="item">
    <div>Endereço</div>
    <div class="input">
        <input 
            type="text"
            name="address"
            placeholder="Diga seu endereço"
            value="{{ user.address }}"
        >
    </div>
</div> 
