<div class="item">
    <div>Nome completo</div>
    <div>
        <input 
            type="text"
            name="name"
            placeholder="Digite seu nome completo"
            value="{{user.name}}"
        >
    </div>
</div> 

<div class="item">
    <div>email</div>
    <div>
        <input 
            type="email"
            name="email"
            placeholder="Digite seu melhor email"
            value="{{user.email}}"
        >
    </div>
</div> 

<div class="item">
    <div>Senha</div>
    <div>
        <input 
            type="password"
            name="password"
            placeholder="Digite uma senha unica"
            value="{{user.password}}"
        >
    </div>
</div>

{% if not user.id %}
<div class="item">
    <div>Repita a senha</div>
    <div>
        <input 
            type="password"
            name="passwordRepeat"
            placeholder="Repita a senha"
        >
    </div>
</div> 
{% endif %}
 
<div class="item">
    <div>CPF ou CNPJ</div>
    <div>
        <input 
            type="text"
            name="cpf_cnpj"
            placeholder="CPF OU CNPJ"
            value="{{user.cpf_cnpj}}"
        >
    </div>
</div>

<div class="item">
    <div>CEP</div>
    <div>
        <input 
            type="text"
            name="cep"
            placeholder="Digite seu CEP"
            value="{{user.cep}}"
        >
    </div>
</div> 

<div class="item">
    <div>Endereço</div>
    <div>
        <input 
            type="text"
            name="address"
            placeholder="Diga seu endereço"
            value="{{ user.address }}"
        >
    </div>
</div> 
