 <div class="item">
            <div>Categoria</div>
            <div>
                <select name="category_id">
                    {% for category in categories%}
                        <option value="{{category.id}}" {% if product.category_id == category.id %} selected{% endif %}>
                            {{category.name}}
                        </option>
                    {% endfor %}
                </select>
            </div>
        </div>
        <div class="item">
            <div>Título</div>
            <div>
                <input 
                    type="text"
                    name="name"
                    placeholder="Digite o Título do Anúncio"
                    value="{{product.name}}"
                    >
            </div>
        </div>

        <div class="item">
            <div>Descrição</div>
            <div>
                <textarea name="description">{{product.description}}</textarea>
            </div>
        </div>
        
        <div class="item">
            <div>Fotos</div>
            <div>
                <div id="photos-upload">
                    <input
                        id="photos-input" 
                        type="file" 
                        name="photo" 
                        multiple
                        accept="image/*"
                        onchange="PhotosUpload.handleFileInput(event)">
                    <p>Selecione até 6 Fotos</p>
                </div>
                
                <div id="photos-preview">
                </div>
            
            </div>
        </div>

        <div class="item">
            <div>Valor</div>
            <div>
                <input 
                    type="text"
                    name="price"
                    placeholder="Preço do Produto"
                    value="{{ product.price}}"
                    onkeydown="Mask.apply(this, 'formatBRL')">


            </div>
            {% if product.old_price %}
                <input type="hidden" name="old_price" value={{product.old_price}}>
            {% endif %}
        </div>
        
        <div class="item">
            <div>Quantidade</div>
            <div>
                <input 
                    type="number"
                    name="quantify"
                    placeholder="Estoque Disponível"
                    value="{{ product.quantify }}">
            </div>
        </div>

        {% if not product.status %}
        <div class="item">
            <div>Disponível ?</div>
            <div>
                <span>
                    <input 
                        type="radio"
                        name="status"
                        value="1"
                        {% if chip.status == '1'%}
                            checked
                        {% endif%}
                        >SIM
                </span>
                <span>
                    <input 
                        type="radio"
                        name="status"
                        value="0"
                        {% if chip.status == '0'%}
                            checked
                        {% endif%}
                        >NÃO
                </span>
            </div>
        </div>
        {% endif %}
