{% extends "layout.njk" %}
{% import "parts/section-products.njk" as section %}

{% block content %}
<section class="search-products container">
    <aside>
        <div class="header">
            <h2>{{serch.term}}</h2>
            <p>{{search.total}} encontrados</p>
        </div>

        <nav class="categories">
            <h4>Categoriass</h4>
            <ul>
                {% for category in categories %}
                    <li><a href="/search/products?filter={{search.term}}&category={{category.id}}">{{category.name}}</a></li>
                {% endfor %}
            </ul>
        </nav>

    </aside>

{{section.products('', 'searched', products)}}


</section>
{% endblock content %}